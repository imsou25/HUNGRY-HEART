<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gvtvtv1"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDERS"
        android:textColor="#ffff"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/fo1"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="FOOD:"
        android:textColor="#000"
        android:textSize="44dp" />


    <TextView
        android:id="@+id/fo4"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="117dp"
        android:text="MRP:"
        android:textColor="#000"
        android:textSize="44dp" />


    <TextView
        android:id="@+id/food_ed"
        android:layout_width="202dp"
        android:layout_height="132dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fo1"
        android:layout_marginEnd="0dp"
        android:textColor="#000"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/food_ed2"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fo4"
        android:layout_alignStart="@+id/food_ed"
        android:textColor="#000"
        android:textSize="36dp" />


    <ImageView
        android:id="@+id/food_image"
        android:layout_width="259dp"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="#d9122222"
        android:text="Proceed" />


</RelativeLayout>